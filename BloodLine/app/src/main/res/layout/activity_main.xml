<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bloodnew" android:id="@+id/imageView"
            android:layout_marginTop="100dp" android:layout_marginLeft="120dp"/>
    <EditText
            android:layout_width="308dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email" android:layout_marginLeft="50dp" android:layout_marginTop="380dp"
            android:hint="Password" android:textColorHint="@android:color/black"/>
    <EditText
            android:layout_width="308dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email2" android:layout_marginLeft="50dp" android:layout_marginTop="320dp"
            android:hint="Email" android:textColor="@android:color/black" android:textColorHint="@android:color/black"/>
    <TextView
            android:text=" Blood Line"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginLeft="110dp"
            android:textSize="36sp" android:layout_marginTop="250dp" android:textColor="@android:color/black"/>
    <Button
            android:text="Log in"
            android:layout_width="308dp"
            android:layout_height="wrap_content" android:id="@+id/login" android:layout_marginTop="480dp"
            android:layout_marginLeft="50dp" android:textColor="@android:color/black"/>
    <Button
            android:text="Register"
            android:layout_width="308dp"
            android:layout_height="wrap_content" android:id="@+id/registration" android:layout_marginTop="530dp"
            android:layout_marginLeft="50dp" android:textColor="@android:color/black"/>
</RelativeLayout>
